<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DefinitionActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/topLayout"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/search_bg"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:id="@+id/backMain"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="16dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My dictionary"
        android:textStyle="bold"
        android:textSize="26sp"
        android:id="@+id/titleDefinition"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/topLayout"
        />

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/topLayout"
       app:layout_constraintLeft_toLeftOf="parent"
       android:orientation="horizontal"
       android:layout_margin="16dp"
       android:id="@+id/word"
       >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Apple"
           android:id="@+id/dicWord"
           android:layout_gravity="center"
           android:textStyle="bold"
           android:textSize="26sp"
           android:textColor="#1334EC"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Apple"
           android:id="@+id/wordType"
           android:layout_marginLeft="8dp"
           android:layout_gravity="center"
           android:textStyle="italic"
           android:textSize="22sp"
           android:textColor="#1334EC"
           />
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/ic_voice"
           android:id="@+id/voiceDefinition"
           android:padding="8dp"
           android:layout_marginLeft="16dp"
           />
   </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/word"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="definition"
        android:id="@+id/definitionWord"
        android:textSize="22sp"
        android:layout_margin="16dp"
        android:textColor="#B31334EC"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="#331334EC"
        android:id="@+id/bottomLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_copy"
        android:id="@+id/copy"
        android:background="?actionBarItemBackground"
        android:layout_margin="8dp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="@id/bottomLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/isfavourite"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/bottomLayout"
        android:src="@drawable/ic_bookmark2"
        android:id="@+id/isfavourite"
        android:background="?actionBarItemBackground"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="8dp"
        android:padding="8dp"
        app:layout_constraintRight_toRightOf="parent"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_share"
        android:id="@+id/share"
        app:layout_constraintLeft_toRightOf="@id/isfavourite"
        android:background="?actionBarItemBackground"
        android:layout_margin="8dp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="@id/bottomLayout"
        app:layout_constraintRight_toRightOf="parent"
        />





</androidx.constraintlayout.widget.ConstraintLayout>